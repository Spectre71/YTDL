<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="YTDL.UsageGuidePage"
             Title="Usage Guide Lines">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">
            <Label Text="How to Use YTDL"
                    FontSize="Title"
                    FontAttributes="Bold"
                    HorizontalOptions="Center"
				    TextColor="{StaticResource Accent}"/>
            <Label HorizontalTextAlignment="Center"
                   FontSize="Medium"
                   LineHeight="1.5"
                   LineBreakMode="WordWrap">
                <Label.FormattedText>
                    <FormattedString>
                        <Span Text="1. Copy URL from Youtube&#10;"/>
                        <Span Text="Video -> Share -> Copy Link"
                              TextColor="{StaticResource Primary}"
                              FontAttributes="Italic"/>
                    </FormattedString>
                </Label.FormattedText>
            </Label>
            <Label Text="2. Paste your YouTube URL when prompted."
				   HorizontalTextAlignment="Center"
                   FontSize="Medium"/>
            <Label Text="3. Tap [Download Audio]."
				   HorizontalTextAlignment="Center"
                   FontSize="Medium"/>
            <Label Text="4. Wait for the process to finish."
				   HorizontalTextAlignment="Center"
                   FontSize="Medium"/>
			<Label HorizontalTextAlignment="Center"
				   FontSize="Medium"
				   LineHeight="1.5"
                   LineBreakMode="WordWrap">
				<Label.FormattedText>
					<FormattedString>
						<!-- First line -->
						<Span Text="5. Files are saved to:&#10;"/>
						<!-- Path line -->
						<Span Text="/.../Documents/YTDL&#10;"
							  TextColor="{StaticResource Secondary}"
							  FontAttributes="Italic"/>
					</FormattedString>
				</Label.FormattedText>
			</Label>
            <Label HorizontalTextAlignment="Justify"
       FontSize="Subtitle"
       LineBreakMode="WordWrap">
                <Label.FormattedText>
                    <FormattedString>
                        <!-- Red "DISCLAIMER" -->
                        <Span Text="DISCLAIMER: " 
                              TextColor="#CC0000"
                              FontAttributes="Bold"/>

                        <!-- Normal text -->
                        <Span Text="The Author ["
                              TextColor="DarkGrey"/>
                        <Span Text="Spectre71"
                              TextColor="{StaticResource Primary}"/>
                        <Span Text="] of this application does in no way, shape, or form take responsibility for any "
                              TextColor="DarkGrey"/>

                        <!-- Red "ILLEGAL" -->
                        <Span Text="ILLEGAL" 
                              TextColor="DarkGrey"
                              FontAttributes="Bold"/>

                        <Span Text=" or "
                              TextColor="DarkGrey"/>

                        <!-- Red "MALICIOUS" -->
                        <Span Text="MALICIOUS" 
                              TextColor="DarkGrey"
                              FontAttributes="Bold"/>

                        <Span Text=" use of this application. "
                              TextColor="DarkGrey"/>
                        <Span Text="YTDL "
                              TextColor="{StaticResource Accent}"/>
                        <Span Text="has been created for educational purposes only, and to enable users an add-less experience.&#10;&#10;"
                              TextColor="DarkGrey"/>

                        <!-- Red warning -->
                        <Span Text="DO NOT DISTRIBUTE ACQUIRED CONTENT, UNLESS THE AUTHOR EXPLICITLY GAVE PERMISSION.&#10;&#10;"
                              CharacterSpacing="1.2"
                              TextColor="#990000"/>

                        <Span Text="DOWNLOAD AT YOUR OWN RISK!"
                              TextColor="#990000"/>
                    </FormattedString>
                </Label.FormattedText>
            </Label>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>